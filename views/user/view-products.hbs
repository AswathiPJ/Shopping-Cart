
    <section>
      <div class="container mt-5">
        <div class="row">
            {{#each products}}
          <div class="col-md-3 p-3">
            <div class="card" style="width: 13rem;height:20rem">
              <img src="/product-images/{{this._id}}.jpg" class="card-img-top" style="height:20rem" alt="..." />
              <div class="card-body">
                <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text">{{this.Description}}</p>
                {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add To Cart</a> --}}
                <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>
    </section>
    
